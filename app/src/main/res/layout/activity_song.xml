<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent" android:layout_height="match_parent"
	tools:context="com.example.android.musicscstream.SongActivity"
	android:background="@color/colorPrimary">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<android.support.v7.widget.Toolbar
			android:id="@+id/song_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			android:elevation="4dp"
			android:theme="@style/ToolbarColoredBackArrow"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

		<ImageView
			android:id="@+id/album_image"
			android:layout_width="match_parent"
			android:layout_height="@dimen/photo_height_xlarge"
			android:scaleType="fitCenter"
			android:gravity="center"
			android:src="@drawable/now_playing"/>

		<TextView
			android:id="@+id/artist_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/HeadingSmall"
			android:text="@string/activity_song_purpose"/>

		<TextView
			android:id="@+id/activity_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/HeadingSmall"
			android:text="@string/activity_info"/>

		<TextView
			android:id="@+id/song_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginTop="@dimen/activity_horizontal_margin"
			android:text="album 1"
			style="@style/HeadingLarge"/>

		<ImageView
			android:id="@+id/controls"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scaleType="fitCenter"
			android:src="@drawable/controls"
			android:layout_marginTop="@dimen/activity_vertical_margin"/>
	</LinearLayout>

</android.support.constraint.ConstraintLayout>
