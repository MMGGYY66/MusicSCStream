<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/artist_list_item"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="70dp">

	<ImageView
		android:id="@+id/list_item_artist_image"
		android:layout_gravity="center_vertical"
		style="@style/ListImage"
		android:layout_marginLeft="@dimen/activity_horizontal_padding"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="center_vertical"
		android:paddingLeft="@dimen/activity_horizontal_padding">

		<TextView
			android:id="@+id/list_item_artist_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/HeadingMedium"/>
		<TextView
			android:id="@+id/list_item_artist_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="dasdfsdfsdf"
			style="@style/HeadingSmall"/>

	</LinearLayout>

</LinearLayout>